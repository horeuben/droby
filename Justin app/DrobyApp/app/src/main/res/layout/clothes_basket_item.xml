<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/selected_clothes"
        android:layout_width="125dp"
        android:layout_height="175dp"
        tools:src="@drawable/black_shirt"/>

    <TextView
        android:id="@+id/selected_clothes_descr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Blue Jeans"
        android:textSize="30sp"
        android:layout_marginTop="50sp"
        android:layout_toRightOf="@id/selected_clothes"
        />

    <TextView
        android:id="@+id/tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tags: Bottom, Bright Colour, Casual"
        android:layout_below="@+id/selected_clothes_descr"
        android:layout_toEndOf="@+id/selected_clothes" />

</RelativeLayout>
