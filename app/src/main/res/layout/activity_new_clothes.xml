<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/clothesImage"
                android:layout_width="match_parent"
                android:layout_height="350dp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/clothesDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add Description..."
                android:textSize="20sp"
                android:gravity="left"
                android:paddingLeft="16dp"
                android:textColor="@android:color/black"
                android:enabled="true"
                android:cursorVisible="true" />

        </RelativeLayout>

        <TextView
            android:id="@+id/clickTagsMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Tags:"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="10dp"
            android:visibility="visible"/>

        <LinearLayout
            android:id="@+id/layout_current_tags"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/editIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mode_edit_black_24dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"/>



        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add a tags:"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:textStyle="italic"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="Input Tag..."
                android:paddingLeft="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/addButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_circle_outline_black_24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:padding="12dp"
                android:textStyle="bold"/>

        </RelativeLayout>



        <TextView
            android:id="@+id/save_changes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:padding="8dp"
            android:visibility="visible"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:textColor="@color/colorPrimaryDark" />



    </LinearLayout>

</ScrollView>
